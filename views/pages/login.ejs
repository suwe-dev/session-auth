<%- include("../partials/header") %>
<link rel="stylesheet" href="css/login.css">
<section>
    <div class="cont">
        <div class="title">
            Login
        </div>
        <div class="oauth-con">
            <a href="/auth/google">
                <div class="google">
                    <div class="img">
                        <img src="images/google.jpg" alt="Google">
                    </div>
                    <div class="text">
                        Continue with Google
                    </div>
                </div>
            </a>
            <a href="/auth/github">
                <div class="github">
                    <div class="img">
                        <img src="images/github-mark.png" alt="Github">
                    </div>
                    <div class="text">
                        Continue with Github
                    </div>
                </div>
            </a>
        </div>

        <hr width="80%"/>
        <div class="or">Or</div>

        <form action="/login" method="post">
            <div class="form-data">
                <div class="label">
                    Email
                </div>
                <input type="email" name="username" id="email" placeholder="E-mail" required autocomplete="off">
            </div>
    
            <div class="form-data">
                <div class="label">
                    Password
                </div>
                <input type="password" name="password" id="password" placeholder="Password" required>
            </div>

            <div class="form-data">
                <button class="submit-btn" type="submit">Login</button>
            </div>
    
            <div class="form-data">Didn't have an account yet?
                <a class="signup-btn" href="/register">
                    Sign Up
                </a>
            </div>
        </form>

    </div>
</section>

<%- include("../partials/footer") %>